upper=lower=digit=space=sc=0
#Take 3 inputs: ID, Phone Number, and Password
id=input('''Enter your ID:
It should be at least 8 numbers, letters, or underscores. No Spaces.''')
if len(id)>=8:
    for i in id:
        if i.isalnum() or i=="_":
            print("Your ID is valid")
            password=input("Enter your password")
            if len(pass)>=5:
                for i in pass:
                    if i.isdigit():
                        digit=digit+1
                    elif i.isupper():
                        upper=upper+1
                    elif i.islower():
                        lower=lower+1
                    elif i.isspace():
                        space=space+1
                    else:
                        sc=sc+1
                if digit>=1 and upper>=1 and lower>=1 and space==0 and sc>=1
                        print("Your password works!")
            else("Your password is invalid")
        else:
            print("Your ID is invalid")
else:
    print("Your ID is invalid")